<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="619.0" prefWidth="468.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="danya.chatclient.controllers.MainController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <HBox prefHeight="26.0" prefWidth="616.0">
      <children>
         <Label prefHeight="18.0" prefWidth="80.0" text="IP-адрес хоста" />
         <TextField fx:id="ipField" prefHeight="26.0" prefWidth="226.0" text="localhost" />
         <Button fx:id="setIp" mnemonicParsing="false" onMouseReleased="#onSetIp" prefHeight="26.0" prefWidth="93.0" text="Задать" />
      </children>
   </HBox>
   <HBox prefHeight="26.0" prefWidth="616.0">
      <children>
         <Label prefHeight="18.0" prefWidth="80.0" text="Ваше имя" />
         <TextField fx:id="name" prefHeight="26.0" prefWidth="226.0" text="Steve" />
         <Button fx:id="setName" mnemonicParsing="false" onMouseReleased="#onSetName" prefHeight="26.0" prefWidth="93.0" text="Задать" />
      </children>
   </HBox>
   <HBox prefHeight="534.0" prefWidth="428.0">
      <children>
         <TextArea fx:id="log" editable="false" prefHeight="488.0" prefWidth="457.0" />
      </children>
   </HBox>
   <HBox prefHeight="26.0" prefWidth="291.0">
      <children>
         <TextField fx:id="text" alignment="BOTTOM_CENTER" prefHeight="26.0" prefWidth="309.0" />
         <Button fx:id="sendBtn" onMouseReleased="#onSendClick" text="Отправить" />
      </children>
   </HBox>
</VBox>